<UserControl x:Name="HomeViewControl"
             x:Class="MATURIXSHIFTPROJECT.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MATURIXSHIFTPROJECT.Views"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800"
             SizeChanged="Window_SizeChanged">
    <UserControl.Resources>
        <Style x:Key="FocusVisual">
            <Setter Property="Control.Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Rectangle Margin="2" StrokeDashArray="1 2" Stroke="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" SnapsToDevicePixels="true" StrokeThickness="1"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <SolidColorBrush x:Key="Button.Static.Background"
                         Color="#FFDDDDDD" />
        <SolidColorBrush x:Key="Button.Static.Border"
                         Color="#FF707070" />
        <SolidColorBrush x:Key="Button.MouseOver.Background"
                         Color="#FFBEE6FD" />
        <SolidColorBrush x:Key="Button.MouseOver.Border"
                         Color="#FF3C7FB1" />
        <SolidColorBrush x:Key="Button.Pressed.Background"
                         Color="#FFC4E5F6" />
        <SolidColorBrush x:Key="Button.Pressed.Border"
                         Color="#FF2C628B" />
        <SolidColorBrush x:Key="Button.Disabled.Background"
                         Color="#FFF4F4F4" />
        <SolidColorBrush x:Key="Button.Disabled.Border"
                         Color="#FFADB2B5" />
        <SolidColorBrush x:Key="Button.Disabled.Foreground"
                         Color="#FF838383" />
        <Style TargetType="{x:Type Button}">
            <Setter Property="FocusVisualStyle"
                    Value="{StaticResource FocusVisual}" />

            <Setter Property="Background"
                    Value="#fc5603" />
            <Setter Property="BorderBrush"
                    Value="Transparent" />
            <Setter Property="Foreground"
                    Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" />
            <Setter Property="BorderThickness"
                    Value="1" />
            <Setter Property="HorizontalContentAlignment"
                    Value="Center" />
            <Setter Property="VerticalContentAlignment"
                    Value="Center" />
            <Setter Property="Padding"
                    Value="1" />
            <Setter Property="Foreground"
                    Value="White" />
            <Setter Property="FontSize"
                    Value="20" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                SnapsToDevicePixels="true"
                                CornerRadius="10">
                            <ContentPresenter x:Name="contentPresenter"
                                              Focusable="False"
                                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              Margin="{TemplateBinding Padding}"
                                              RecognizesAccessKey="True"
                                              SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsDefaulted"
                                     Value="true">
                                <Setter Property="BorderBrush"
                                        TargetName="border"
                                        Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" />
                            </Trigger>
                            <Trigger Property="IsMouseOver"
                                     Value="true">
                                <Setter Property="Background"
                                        TargetName="border"
                                        Value="#ff7c3b" />
                                <Setter Property="BorderBrush"
                                        TargetName="border"
                                        Value="Transparent" />
                            </Trigger>
                            <Trigger Property="IsPressed"
                                     Value="true">
                                <Setter Property="Background"
                                        TargetName="border"
                                        Value="#fc5603" />
                                <Setter Property="BorderBrush"
                                        TargetName="border"
                                        Value="Transparent" />
                            </Trigger>
                            <Trigger Property="IsEnabled"
                                     Value="false">
                                <Setter Property="Background"
                                        TargetName="border"
                                        Value="{StaticResource Button.Disabled.Background}" />
                                <Setter Property="BorderBrush"
                                        TargetName="border"
                                        Value="{StaticResource Button.Disabled.Border}" />
                                <Setter Property="TextElement.Foreground"
                                        TargetName="contentPresenter"
                                        Value="{StaticResource Button.Disabled.Foreground}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Button x:Name="DeleteBtn" Grid.Row="4"
                HorizontalAlignment="Stretch"
                Content="Delete"
                VerticalAlignment="Bottom" MinHeight="50" Margin="10,0,0,10" 
                Command="{Binding DeleteBtnCommand}"
                CommandParameter="{Binding ElementName=myListView}"/>
        <Button Grid.Row="4"
                Grid.Column="1"
                HorizontalAlignment="Stretch"
                Content="Edit"
                VerticalAlignment="Bottom"
                MinHeight="50" Margin="10,0,50,10" 
                Command="{Binding EditShiftCommand}"
              />
        <Button Grid.Row="4"
                Grid.Column="5"
                HorizontalAlignment="Stretch"
                Content="Create Log"
                VerticalAlignment="Bottom"
                MinHeight="50" 
                Margin="0,0,10,10"
                Command="{Binding CreateLogCommand}"/>

        <ComboBox x:Name="EmployeeCB"
                  Grid.Column="4"
                  Grid.Row="0"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Top"
                  ItemsSource="{Binding Employees, Mode=TwoWay}"
                  DisplayMemberPath="Initials"
                  SelectedItem="{Binding SelectedEmployee}" Margin="0,10,130,0" FontSize="20"
        />
        <TextBlock Grid.Column="3"
                   Grid.Row="0"
                   HorizontalAlignment="Stretch"
                   VerticalAlignment="Top"
                   Text="Sort by"
                   FontSize="20"
                   Margin="175,13,0,0" FontWeight="Bold" />


        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Column="0" Margin="-20,10,0,0" Grid.Row="0">
            <Button Content="◄" Command="{Binding PreviousCommand}"  HorizontalContentAlignment="Center" Width="25" VerticalContentAlignment="Top"/>
            <ComboBox x:Name="ShiftSpan"
                      VerticalAlignment="Center"
                      SelectedItem="{Binding SelectedFilter, Mode=TwoWay}"
                      FontSize="20"
                      ItemsSource="{Binding DayWeekMonth}">
            </ComboBox>

            <Button Content="►"
                    Width="25"
                    Command="{Binding NextCommand}"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Top" />
        </StackPanel>

        <Label Grid.Row="0"
               Grid.Column="1"
               Grid.ColumnSpan="2"
               Content="{Binding CurrentSpanLabel}"
               FontSize="25"
               FontWeight="Bold"
               Foreground="Black"
               HorizontalAlignment="Center"
               VerticalAlignment="Top"
               Margin="0,0,0,0"/>


        <ListView Name="myListView"
                      Margin="0,50,130,-80"

                      Grid.RowSpan="4" Grid.ColumnSpan="5" ItemsSource="{Binding Shifts}" SelectedItem="{Binding SelectedShift, Mode=TwoWay}" SelectionMode="Extended" SelectionChanged="ListView_SelectionChanged" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                  
                  

            <ListView.Resources>
                <Style TargetType="GridViewColumnHeader">
                    <Setter Property="Background"
                            Value="#fc5603" />
                    <Setter Property="Foreground"
                            Value="White" />
                    <Setter Property="FontSize"
                            Value="20" />
                    <Setter Property="HorizontalContentAlignment"
                            Value="Center" />
                    <Setter Property="VerticalContentAlignment"
                            Value="Center" />
                    <Setter Property="Padding"
                            Value="5" />
                    <Setter Property="FontFamily"
                            Value="Lucida Sans Unicode" />
                    <Setter Property="Height"
                            Value="40" />
                    <Setter Property="Margin"
                            Value="0,0,1,0" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="GridViewColumnHeader">
                                <Border Background="{TemplateBinding Background}"
                                        BorderBrush="#fc5603"
                                        BorderThickness="0,0,0,0"
                                        CornerRadius="1" >
                                    <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                      RecognizesAccessKey="True" />
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListView.Resources>
            <!-- Row height setting -->
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="MinHeight"
                            Value="50" />
                    <Setter Property="VerticalContentAlignment"
                            Value="Center" />
                    <Setter Property="HorizontalContentAlignment"
                            Value="Center" />
                    <Setter Property="FontSize"
                            Value="25" />
                    <Setter Property="FontFamily"
                            Value="Lucida Sans Unicode" />
                    <Setter Property="Foreground"
                            Value="Black" />

                    <Style.Triggers>
                        <Trigger Property="IsMouseOver"
                                 Value="True">
                            <Setter Property="Background"
                                    Value="LightGray" />
                            <Setter Property="BorderBrush"
                                    Value="Transparent" />
                            <!-- Light blue -->
                        </Trigger>
                        <Trigger Property="IsSelected"
                                 Value="True">
                            <Setter Property="Background"
                                    Value="LightGray" />
                            <Setter Property="BorderBrush"
                                    Value="Transparent" />
                            <!-- Slightly darker blue when selected -->
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </ListView.ItemContainerStyle>

            <!-- GridView with CellTemplates instead of DisplayMemberBinding -->
            <ListView.View>
                <GridView>

                    <GridViewColumn Header="Initials">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Employee.Initials}"
                                           Padding="10,0"
                                           VerticalAlignment="Center" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="Date">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Date, StringFormat=dd-MM-yyyy}"
                                           Padding="10,0"
                                           VerticalAlignment="Center" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="Start Time">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding StartTime,StringFormat=HH:mm}"
                                           Padding="10,0"
                                           VerticalAlignment="Center" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="End Time">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding EndTime, StringFormat=HH:mm}"
                                           Padding="0,0"
                                           VerticalAlignment="Center" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="Category">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Category.Name}"
                                           Padding="0,0"
                                           VerticalAlignment="Center" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                </GridView>
            </ListView.View>
        </ListView>

        <TextBlock Text="Log" Grid.Column="4" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="25" Margin="120,10,0,0"
                   FontWeight="Bold" />
        <TextBlock Text="Date"
                   Grid.Column="4"
                   Grid.ColumnSpan="2"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   FontSize="25"
                   Margin="-50,60,0,0" />
        <TextBlock Text="Initials"
                   Grid.Column="4"
                   Grid.ColumnSpan="2"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   FontSize="25"
                   Margin="-40,120,0,0" />

        <Label Content="{Binding SelectedShift.Date,Mode=TwoWay, StringFormat=dd-MM-yyyy}"

               Grid.Column="4"
               Grid.ColumnSpan="2"
               HorizontalAlignment="Center"
               VerticalAlignment="Top"
               FontSize="25" Margin="210,55,0,0" Foreground="DarkGray"/>
        <Label Content="{Binding SelectedShift.Employee.Initials, Mode=TwoWay}"
               Grid.Column="4"
               Grid.ColumnSpan="2"
               HorizontalAlignment="Center"
               VerticalAlignment="Top"
               FontSize="25"
               Margin="200,115,0,0"
               Foreground="DarkGray" />


        <Grid Grid.Column="4" Grid.Row="1" Grid.RowSpan="4" Grid.ColumnSpan="4" Margin="0,50,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <ListView Grid.Row="0"  Grid.RowSpan="3" Grid.Column="2" Grid.ColumnSpan="4" ItemsSource="{Binding Logs}" Background="White" DisplayMemberPath="Description" SelectedItem="{Binding SelectedLog}">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="MouseDoubleClick">
                        <i:InvokeCommandAction Command="{Binding OpenLogDescriptionCommand}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
                <ListView.Resources>
                    <Style TargetType="GridViewColumnHeader">
                        <Setter Property="Background"
                Value="#fc5603" />
                        <Setter Property="Foreground"
                Value="White" />
                        <Setter Property="FontSize"
                Value="20" />
                        <Setter Property="HorizontalContentAlignment"
                Value="Center" />
                        <Setter Property="VerticalContentAlignment"
                Value="Center" />
                        <Setter Property="Padding"
                Value="5" />
                        <Setter Property="FontFamily"
                Value="Lucida Sans Unicode" />
                        <Setter Property="Height"
                Value="40" />
                        <Setter Property="Margin"
                Value="0,0,1,0" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="GridViewColumnHeader">
                                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="#fc5603"
                            BorderThickness="0,0,0,0"
                            CornerRadius="1" >
                                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                          RecognizesAccessKey="True" />
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListView.Resources>

                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="MinHeight"
                Value="50" />
                        <Setter Property="VerticalContentAlignment"
                Value="Center" />
                        <Setter Property="HorizontalContentAlignment"
                Value="Center" />
                        <Setter Property="FontSize"
                Value="25" />
                        <Setter Property="FontFamily"
                Value="Lucida Sans Unicode" />
                        <Setter Property="Foreground"
                Value="Black" />

                        <Style.Triggers>
                            <Trigger Property="IsMouseOver"
                     Value="True">
                                <Setter Property="Background"
                        Value="LightGray" />
                                <Setter Property="BorderBrush"
                        Value="Transparent" />
                                <!-- Light blue -->
                            </Trigger>
                            <Trigger Property="IsSelected"
                     Value="True">
                                <Setter Property="Background"
                        Value="LightGray" />
                                <Setter Property="BorderBrush"
                        Value="Transparent" />
                                <!-- Slightly darker blue when selected -->
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListView.ItemContainerStyle>

                <ListView.View>
                    <GridView>

                        <GridViewColumn Header="Date">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Date, StringFormat=dd-MM-yyyy}"
                                Padding="10,0"
                                VerticalAlignment="Center" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Header="Description">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Description}"
                                Padding="10,0"
                                VerticalAlignment="Center"
                                TextTrimming="CharacterEllipsis"
                                TextWrapping="NoWrap"
                                MaxWidth="240" />              
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        

                    </GridView>
                </ListView.View>


            </ListView>

            
        </Grid>



    </Grid>
</UserControl>
